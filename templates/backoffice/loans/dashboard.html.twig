{% extends "backendofficebase.html.twig" %}

{% block title %}Gestion des Emprunts - Bibliothèque{% endblock %}

{% block content %}
<div class="container-fluid pt-4 px-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Gestion des Emprunts</h1>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-primary text-uppercase mb-1 small font-weight-bold">Demandes en attente</div>
                    <div class="h3 mb-0">{{ requestedLoans }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-success text-uppercase mb-1 small font-weight-bold">Emprunts actifs</div>
                    <div class="h3 mb-0">{{ activeLoans }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-warning text-uppercase mb-1 small font-weight-bold">En retard</div>
                    <div class="h3 mb-0">{{ overdueLoans }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="text-info text-uppercase mb-1 small font-weight-bold">Retournés</div>
                    <div class="h3 mb-0">{{ returnedLoans }}</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert for Pending Approvals -->
    {% if requestedLoans > 0 %}
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Attention!</strong> {{ requestedLoans }} demande(s) d'emprunt en attente d'approbation.
                <a href="{{ path('app_admin_loan_requests') }}" class="btn btn-sm btn-warning ms-2">Traiter les demandes</a>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Navigation Tabs -->
    <div class="row mb-3">
        <div class="col-md-12">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="calendar-tab" data-bs-toggle="tab" href="#calendar-content" role="tab">Calendrier</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pending-tab" data-bs-toggle="tab" href="#pending-content" role="tab">
                        Demandes 
                        {% if requestedLoans > 0 %}
                            <span class="badge bg-warning text-dark">{{ requestedLoans }}</span>
                        {% endif %}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="active-tab" data-bs-toggle="tab" href="#active-content" role="tab">
                        Emprunts actifs
                        {% if activeLoans > 0 %}
                            <span class="badge bg-success">{{ activeLoans }}</span>
                        {% endif %}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="history-tab" data-bs-toggle="tab" href="#history-content" role="tab">Historique</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Tab Content -->
    <div class="tab-content">
        <!-- Calendar Tab -->
        <div id="calendar-content" class="tab-pane fade show active">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Calendrier des Emprunts</h6>
                        </div>
                        <div class="card-body">
                            <div id="calendar"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Tab -->
        <div id="pending-content" class="tab-pane fade">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Demandes en Attente d'Approbation</h6>
                        </div>
                        <div class="card-body">
                            {% if requestedLoans > 0 %}
                                <a href="{{ path('app_admin_loan_requests') }}" class="btn btn-warning btn-sm">
                                    Gérer les demandes ({{ requestedLoans }})
                                </a>
                            {% else %}
                                <div class="alert alert-info" role="alert">
                                    Aucune demande en attente.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Tab -->
        <div id="active-content" class="tab-pane fade">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Emprunts Actifs et En Retard</h6>
                        </div>
                        <div class="card-body">
                            {% if activeLoans > 0 %}
                                <a href="{{ path('app_admin_loan_active') }}" class="btn btn-success btn-sm">
                                    Voir les emprunts actifs ({{ activeLoans }})
                                </a>
                            {% else %}
                                <div class="alert alert-info" role="alert">
                                    Aucun emprunt actif.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- History Tab -->
        <div id="history-content" class="tab-pane fade">
            <div class="row">
                <div class="col-md-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Historique des Emprunts</h6>
                        </div>
                        <div class="card-body">
                            <a href="{{ path('app_admin_loan_history') }}" class="btn btn-info btn-sm">
                                Voir l'historique
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FullCalendar CSS -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet" />

<!-- FullCalendar JS -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>

<!-- French Locale -->
<script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/locales/fr.global.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var calendarEl = document.getElementById('calendar');
    
    if (!calendarEl) {
        console.error('Calendar element not found');
        return;
    }
    
    // Calendar events from controller
    var events = {{ calendarEvents|json_encode|raw }};
    
    // Detect mobile device
    const isMobile = window.innerWidth <= 768;
    
    function initCalendar() {
        // Check if calendar is already initialized
        if (calendarEl.dataset.initialized === 'true') {
            return;
        }
        calendarEl.dataset.initialized = 'true';
        
        // Clear any existing calendar
        calendarEl.innerHTML = '';
        
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            locale: 'fr',
            height: 'auto',
            headerToolbar: {
                left: isMobile ? 'prev,next' : 'prev,next today',
                center: 'title',
                right: isMobile ? 'dayGridMonth' : 'dayGridMonth,timeGridWeek,timeGridDay'
            },
            events: events || [],
            dayMaxEvents: isMobile ? 1 : true,
            moreLinkClick: isMobile ? 'popover' : 'week',
            eventClick: function(info) {
                // Optional: Handle event click
                console.log('Event clicked:', info.event);
            },
            dateClick: function(info) {
                // Optional: Handle date click
                console.log('Date clicked:', info.dateStr);
            },
            datesSet: function(info) {
                // Optional: Called when date range changes
            },
            eventDidMount: function(info) {
                // Add tooltips or additional styling
                info.el.style.cursor = 'pointer';
            },
            // Responsive event rendering
            eventContent: function(arg) {
                if (isMobile) {
                    return {
                        html: '<div style="font-size: 0.65rem; line-height: 1.2; padding: 1px 2px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 100%;">' + arg.event.title + '</div>'
                    };
                }
                return {};
            }
        });

        calendar.render();
        
        // Handle window resize for responsive calendar
        let resizeTimer;
        const resizeHandler = function() {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(function() {
                if (calendar) {
                    calendar.updateSize();
                }
            }, 250);
        };
        
        window.addEventListener('resize', resizeHandler);
        
        // Update calendar size when tab is shown (Bootstrap tabs)
        const calendarTab = document.getElementById('calendar-tab');
        if (calendarTab) {
            calendarTab.addEventListener('shown.bs.tab', function() {
                setTimeout(function() {
                    if (calendar) {
                        calendar.updateSize();
                    }
                }, 100);
            });
        }
    }
    
    // Initialize calendar if element is visible, otherwise wait for tab activation
    if (calendarEl.offsetParent !== null || calendarEl.offsetWidth > 0 || calendarEl.offsetHeight > 0) {
        initCalendar();
    } else {
        // Wait for tab to be shown
        const calendarTab = document.getElementById('calendar-tab');
        if (calendarTab) {
            calendarTab.addEventListener('shown.bs.tab', function() {
                initCalendar();
            });
        } else {
            // Fallback: initialize after a delay
            setTimeout(initCalendar, 500);
        }
    }
});
</script>

